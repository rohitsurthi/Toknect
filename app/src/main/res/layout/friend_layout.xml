<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="62dp"
    android:background="@color/colorBlack">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/request_friend_propic"
        android:layout_width="80dp"
        android:layout_height="52dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/default_user_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/request_friend_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/request_friend_propic"
        android:fontFamily="@font/pnb"
        android:text="username"
        android:textColor="@color/colorwhite"
        android:textSize="22dp"
        app:layout_constraintStart_toEndOf="@+id/request_friend_propic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/accept_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_friend_username"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/textView3"
        android:fontFamily="@font/pnb"
        android:text="date"
        android:textColor="@color/colorwhite"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/request_friend_propic"
        app:layout_constraintTop_toBottomOf="@+id/request_friend_username"
        app:layout_constraintVertical_bias="0.416" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/request_friend_username"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/request_friend_propic"
        android:fontFamily="@font/pnb"
        android:text="Friends since:"
        android:textColor="@color/colorwhite"
        android:textSize="10dp"
        app:layout_constraintStart_toEndOf="@+id/request_friend_propic"
        app:layout_constraintTop_toBottomOf="@+id/request_friend_username" />

    <Button
        android:id="@+id/direct_unfriend_btn"
        android:layout_width="99dp"
        android:layout_height="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/pnb"
        android:text="Unfriend :("
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />


    <View
        style="@style/Divider"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark" />

</RelativeLayout>